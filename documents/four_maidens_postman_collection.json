{
  "info": {
    "_postman_id": "f0a12345-6789-4abc-def0-123456789abc",
    "name": "Four Maidens API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for user authentication and management"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"first_name\": \"Juan\",\n  \"last_name\": \"Dela Cruz\",\n  \"email\": \"juan.delacruz@example.com\",\n  \"password\": \"StrongPassword123!\",\n  \"phones\": [{\"type\": \"mobile\", \"value\": 9123456789}],\n  \"address\": \"Davao City\",\n  \"date_of_birth\": \"1995-06-15\",\n  \"gender\": \"male\"\n}"
        },
        "url": { "raw": "http://localhost:4000/users/register", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["users","register"] }
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"juan.delacruz@example.com\",\n  \"password\": \"StrongPassword123!\"\n}"
        },
        "url": { "raw": "http://localhost:4000/users/login", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["users","login"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save JWT to environment variable",
              "pm.environment.set(\"accessToken\", pm.response.json().accessToken);"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Current User",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": { "raw": "http://localhost:4000/users/me", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["users","me"] }
      }
    },
    {
      "name": "Update Current User",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"address\": \"New Address, Davao City\",\n  \"phones\": [{\"type\": \"mobile\", \"value\": 9123456790}]\n}"
        },
        "url": { "raw": "http://localhost:4000/users/me", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["users","me"] }
      }
    },
    {
      "name": "Admin Get All Users",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": { "raw": "http://localhost:4000/users", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["users"] }
      }
    },
    {
      "name": "Admin Soft Delete User",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": { "raw": "http://localhost:4000/users/:id", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["users",":id"] }
      }
    },
    {
      "name": "Request Password Reset",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"juan.delacruz@example.com\"\n}"
        },
        "url": { "raw": "http://localhost:4000/users/request-password-reset", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["users","request-password-reset"] }
      }
    },
    {
      "name": "Reset Password",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"<PASTE_RESET_TOKEN_HERE>\",\n  \"newPassword\": \"NewStrongPass123!\"\n}"
        },
        "url": { "raw": "http://localhost:4000/users/reset-password", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["users","reset-password"] }
      }
    }
  ]
}
