{
  "info": {
    "name": "Employee Credentials API",
    "description": "Postman collection for managing employee credentials",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add Credential",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"credential_type\": \"Drivers License\",\n  \"value\": \"DL-2024-889912\",\n  \"acquire_on_date\": \"2022-05-01\",\n  \"expire_on_date\": \"2026-05-01\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/employees/{{employeeId}}/credentials",
          "host": ["{{baseUrl}}"],
          "path": ["employees", "{{employeeId}}", "credentials"]
        }
      }
    },
    {
      "name": "Get Credentials",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/employees/{{employeeId}}/credentials",
          "host": ["{{baseUrl}}"],
          "path": ["employees", "{{employeeId}}", "credentials"]
        }
      }
    },
    {
      "name": "Update Credential",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"value\": \"DL-UPDATED-2024\",\n  \"expire_on_date\": \"2027-05-01\",\n  \"is_active\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/employees/{{employeeId}}/credentials/{{credentialId}}",
          "host": ["{{baseUrl}}"],
          "path": [
            "employees",
            "{{employeeId}}",
            "credentials",
            "{{credentialId}}"
          ]
        }
      }
    },
    {
      "name": "Remove Credential",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/employees/{{employeeId}}/credentials/{{credentialId}}",
          "host": ["{{baseUrl}}"],
          "path": [
            "employees",
            "{{employeeId}}",
            "credentials",
            "{{credentialId}}"
          ]
        }
      }
    }
  ]
}
